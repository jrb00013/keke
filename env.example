# Keke - Advanced AI-Powered Excel Datasheet Tool
# Environment Configuration Template
# Copy this file to .env and update the values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
KEKE_ENV=development

# Server Configuration
HOST=localhost
PORT=3000
DEBUG=true

# =============================================================================
# AI CONFIGURATION
# =============================================================================

# Enable AI features
AI_ENABLED=true

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary Database (PostgreSQL recommended for production)
DATABASE_URL=postgresql://postgres:password@localhost:5432/keke

# Redis for caching and sessions
REDIS_URL=redis://localhost:6379

# MongoDB for document storage
MONGODB_URL=mongodb://localhost:27017/keke

# PostgreSQL Configuration
POSTGRES_URL=postgresql://postgres:password@localhost:5432/keke
POSTGRES_DB=keke
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# =============================================================================
# CLOUD STORAGE CONFIGURATION
# =============================================================================

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=keke-storage

# Azure Blob Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key

# Google Cloud Storage Configuration
GOOGLE_APPLICATION_CREDENTIALS=/path/to/google-credentials.json
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_STORAGE_BUCKET=keke-storage

# Dropbox Configuration
DROPBOX_ACCESS_TOKEN=your_dropbox_access_token

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_key_here

# Encryption key for sensitive data
ENCRYPTION_KEY=your_encryption_key_here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT=100
RATE_WINDOW=900

# =============================================================================
# FILE PROCESSING CONFIGURATION
# =============================================================================

# Maximum file size (in bytes)
MAX_FILE_SIZE=52428800

# Supported file formats
SUPPORTED_FORMATS=xlsx,xls,csv,json,parquet

# Temporary file cleanup interval (in seconds)
CLEANUP_INTERVAL=3600

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Enable monitoring services
MONITORING_ENABLED=true

# Prometheus Configuration
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION_TIME=15d

# Grafana Configuration
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Worker processes
WORKER_PROCESSES=4

# Memory limits
MAX_MEMORY_USAGE=1073741824

# Cache configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Hot reload for development
HOT_RELOAD=true

# Debug mode
DEBUG_MODE=true

# Test database
TEST_DATABASE_URL=sqlite:///test.db

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# SSL Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Load balancer configuration
LOAD_BALANCER_ENABLED=false
LOAD_BALANCER_PORT=80

# Health check configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# EXTERNAL SERVICES CONFIGURATION
# =============================================================================

# Email service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Webhook URLs
WEBHOOK_URL=your_webhook_url

# External API endpoints
EXTERNAL_API_BASE_URL=https://api.example.com
EXTERNAL_API_KEY=your_external_api_key

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
FEATURE_AI_ASSISTANT=true
FEATURE_MACHINE_LEARNING=true
FEATURE_CLOUD_STORAGE=true
FEATURE_COLLABORATION=true
FEATURE_REAL_TIME_UPDATES=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_AUTOMATED_REPORTING=true

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Notification settings
NOTIFICATIONS_ENABLED=true
NOTIFICATION_EMAIL=true
NOTIFICATION_SLACK=false
SLACK_WEBHOOK_URL=your_slack_webhook_url

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Add your custom environment variables here
# CUSTOM_VAR=value
